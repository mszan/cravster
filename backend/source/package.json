{
  "name": "cravster-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "scripts": {
    "watch": "ts-node-dev --exit-child --debug --nolazy --respawn --transpile-only --inspect=0.0.0.0:9000 src/index.ts",
    "format": "prettier --write src",
    "start:prod": "mikro-orm migration:up && node dist/src/index.js",
    "build": "tsc --build tsconfig.json"
  },
  "dependencies": {
    "@mikro-orm/cli": "5.9.5",
    "@mikro-orm/core": "5.9.5",
    "@mikro-orm/migrations": "5.9.5",
    "@mikro-orm/postgresql": "5.9.5",
    "@mikro-orm/reflection": "5.9.5",
    "@mikro-orm/seeder": "5.9.5",
    "@mikro-orm/sql-highlighter": "1.0.1",
    "@nestjs/axios": "3.0.0",
    "@nestjs/common": "10.1.2",
    "@nestjs/config": "3.0.0",
    "@nestjs/core": "10.1.2",
    "@nestjs/jwt": "10.1.0",
    "@nestjs/passport": "10.0.0",
    "@nestjs/platform-express": "10.1.2",
    "@nestjs/schedule": "3.0.1",
    "@nestjs/swagger": "7.1.4",
    "bcrypt": "5.1.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "cookie-parser": "1.4.6",
    "helmet": "7.0.0",
    "lru-cache": "7.14.0",
    "minio": "7.1.1",
    "multer": "1.4.5-lts.1",
    "nest-winston": "^1.9.4",
    "nestjs-minio-client": "2.0.0",
    "passport": "0.6.0",
    "passport-jwt": "4.0.1",
    "passport-local": "1.0.0",
    "recharts": "2.7.2",
    "redis": "4.6.7",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.1",
    "sharp": "^0.32.4",
    "tick": "0.1.1",
    "ts-node": "10.9.1"
  },
  "devDependencies": {
    "@mikro-orm/entity-generator": "5.9.5",
    "@types/bcrypt": "5.0.0",
    "@types/cookie-parser": "1.4.3",
    "@types/cron": "2.0.1",
    "@types/lodash": "4.14.196",
    "@types/minio": "7.1.1",
    "@types/multer": "1.4.7",
    "@types/node": "20.4.5",
    "@types/passport-jwt": "3.0.9",
    "@types/passport-local": "1.0.35",
    "@types/reflect-metadata": "0.1.0",
    "@types/uuid": "9.0.2",
    "@types/validator": "13.7.17",
    "@typescript-eslint/eslint-plugin": "6.2.0",
    "@typescript-eslint/parser": "6.2.0",
    "eslint": "8.46.0",
    "eslint-config-prettier": "8.9.0",
    "eslint-plugin-prettier": "5.0.0",
    "prettier": "3.0.0",
    "ts-node-dev": "2.0.0",
    "typescript": "5.1.6"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "env": {
      "node": true
    },
    "ignorePatterns": [
      "/node_modules",
      "/dist",
      "/temp"
    ],
    "rules": {
      "@typescript-eslint/no-inferrable-types": "off",
      "semi": "warn",
      "quotes": [
        "warn",
        "double",
        {
          "allowTemplateLiterals": true
        }
      ],
      "prettier/prettier": "warn"
    },
    "overrides": [
      {
        "files": [
          "./src/modules/orm/migrations/*.ts"
        ],
        "rules": {
          "quotes": "off",
          "prettier/prettier": "off"
        }
      }
    ]
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "singleQuote": false
  },
  "mikro-orm": {
    "useTsNode": true,
    "tsConfigPath": "./tsconfig.json",
    "configPaths": [
      "./src/modules/orm/orm.config.ts",
      "./dist/src/modules/orm/orm.config.js"
    ]
  }
}